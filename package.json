{
  "name": "littlesteps-ai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "generate": "pnpm drizzle-kit generate",
    "migrate": "./scripts/wait-for-postgres-and-migrate.sh",
    "reset": "docker-compose down -v --remove-orphans && docker-compose build --no-cache && docker-compose up -d",
    "reset:db": "pnpm reset && pnpm generate && pnpm migrate",
    "docker:shell": "docker exec -it littlesteps-dev sh",
    "docker:psql": "docker run -it --network littlesteps-ai_default postgres psql -h db -U postgres -d littlesteps"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "better-auth": "^1.3.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "openai": "^5.10.1",
    "pg": "^8.16.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.4",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5"
  },
  "packageManager": "pnpm@10.13.1",
  "volta": {
    "node": "20.19.3"
  }
}
