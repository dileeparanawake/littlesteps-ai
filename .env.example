# Real OpenAI API key (required for production)
OPENAI_API_KEY=your-openai-api-key-here
# Optional: Mock API key for testing or fallback scenarios
OPENAI_API_MOCK_KEY=sk-0 # Mock API key


# Use mock OpenAI API (true = mock baseURL, false = default OpenAI baseURL)
MOCK_API=false 

# Authentication via BetterAuth.js

# Random value used by the library for encryption and generating hashes. Generate one here https://www.better-auth.com/docs/installation#:~:text=of%20your%20project.-,Set%20Environment%20Variables,-Create%20a%20.env

BETTER_AUTH_SECRET=your-key-here
BETTER_AUTH_URL=http://localhost:3000 #Base URL of your app


# Better auth google credentials - setup info https://www.better-auth.com/docs/authentication/google#get-your-google-credentials

GOOGLE_CLIENT_ID=client-id-here
GOOGLE_CLIENT_SECRET=client-secret-here