{
  "name": "littlesteps-ai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "generate": "pnpm drizzle-kit generate",
    "migrate": "./scripts/wait-for-postgres-and-migrate.sh",
    "migrations:reset": "rm -rf src/db/migrations && mkdir -p src/db/migrations",
    "docker:down": "docker compose down --volumes --remove-orphans",
    "docker:build": "docker compose build --no-cache",
    "docker:up": "docker compose up -d",
    "docker:reset": "pnpm docker:down && pnpm docker:build && pnpm docker:up",
    "net:clean": "docker ps -q --filter network=littlesteps-ai_default | xargs -r docker stop && docker network rm littlesteps-ai_default || true",
    "docker:reset:db": "pnpm docker:down && docker volume prune -f && pnpm migrations:reset && pnpm generate && pnpm docker:build && pnpm docker:up && pnpm migrate",
    "docker:shell": "docker exec -it littlesteps-dev sh",
    "docker:psql": "docker run -it --network littlesteps-ai_default postgres psql -h db -U postgres -d littlesteps",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "better-auth": "^1.3.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "openai": "^5.12.1",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.4",
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "16.3.0",
    "@types/node": "^20.19.9",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitest/ui": "3.2.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.3.5",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.13.1",
  "volta": {
    "node": "20.19.3"
  }
}
